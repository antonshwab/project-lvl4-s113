extends /layouts/application.pug

block content
    div.container
      div.row
        div.col-2='ID:'
        div.col-10=`${preparedTask.id}`
      div.row
        div.col-2='Task:'
        div.col-10=`${preparedTask.name}`
      div.row
        div.col-2='Description:'
        div.col-10=`${preparedTask.description}`
      div.row
        div.col-2='Status:'
        div.col-10=`${preparedTask.status}`
      div.row
        div.col-2='Creator:'
        div.col-10=`${preparedTask.creator}`
      div.row
        div.col-2='Assign to:'
        div.col-10=`${preparedTask.assignedTo}`
      div.row
        div.col-2='Tags:'
        div.col-10
          ul.list-inline
            each tag in preparedTask.tags
              li.list-item= tag
          
    if isSignedIn() && (nowUserId === preparedTask.creatorId || nowUserId == preparedTask.assignedToId) 
      form(action=urlFor('editTask', preparedTask.id) method='get')
        .form-group
          input(type='hidden')
          button(class='btn') Edit


      if preparedTask.creatorId === nowUserId
        form(data-confirm='Are you sure you want to delete?' action=urlFor('deleteTask', preparedTask.id) method='post')
          .form-group
            input(type='hidden' name='_method' value='DELETE')
            button(class='btn btn-danger') Delete
    
    

