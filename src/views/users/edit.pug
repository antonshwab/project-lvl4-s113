extends /layouts/application.pug

block content
  h3 Edit
  +formFor({ url: urlFor('updateProfile', f.object.id), method: 'post', as: 'patch' })
    +input(f, 'email')
    +input(f, 'firstName', 'Firstname')
    +input(f, 'lastName', 'Lastname')
    +input(f, 'password', 'Password', { as: 'password' })
    button.btn.btn-primary(type='submit')= 'Update'
