extends /layouts/application.pug

block content
  h3 Edit
  +formFor(f, { url: urlFor('updateProfile', f.object.id), method: 'post' })
    +input(f, 'email')
    +input(f, 'firstName', 'Firstname')
    +input(f, 'lastName', 'Lastname')
    +input(f, 'password', 'Password', { as: 'password' })
    input(type="hidden" name="_method" value="PATCH")
    +button(f)
