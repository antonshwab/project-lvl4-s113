extends /layouts/application.pug

block content
  +formFor(f, { url: urlFor('users'), method: 'post' })
    +input(f, 'email', 'Email address')
    +input(f, 'firstName', 'Firstname')
    +input(f, 'lastName', 'Lastname')
    +input(f, 'password', 'Password', { as: 'password' })
    +button(f, 'Sign up')
